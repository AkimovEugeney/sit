  ]

.catalog
  .container 
    .catalog__grid 
      aside.filter.catalog__filter  
        h2.filter__title Фильтровать по:
        .filter__block.filter__block--price
          h3.filter__name Цвет
          ul.filter__list 
            li.filter__item
              label 
                input.checkbox.filter__checkbox(type="checkbox")
                |Коричневый
            li.filter__item
              label 
                input.checkbox.filter__checkbox(type="checkbox")
                |Черный
            li.filter__item
              label 
                input.checkbox.filter__checkbox(type="checkbox")
                |Синий
            li.filter__item
              label 
                input.checkbox.filter__checkbox(type="checkbox")
                |Белый
        .filter__block.filter__block--category
          h3.filter__name Категория
          ul.filter__list 
            li.filter__item
              label 
                input.checkbox.filter__checkbox(type="checkbox")
                |Диваны
            li.filter__item
              label 
                input.checkbox.filter__checkbox(type="checkbox")
                |Кресла
        .filter__block
          h3.filter__name Цена
          .filter__price
            label от
              input.filter__price-input(type="text", placeholder="2000")
            label до
              input.filter__price-input(type="text", placeholder="150 000")
      .catalog-new-collection 
        img.catalog-new-collection__img(src="img/content/new-collection-catalog.jpeg", alt="Новая коллекция", loading="lazy")
        .catalog-new-collection__inner 
          h3.catalog-new-collection__title Оксфорд 1950
          p.catalog-new-collection__descr Новая коллекция изысканных кресел
          a.card-link-enter(href="#!")
            p.card-link-enter--text В каталог
            span.card-link-enter--btn 
              <svg width="6.000000" height="9.000000" viewBox="0 0 6 9" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                  <path id="Vector_12" d="M0.62 0.56L4.06 4L0.62 7.43" stroke="#A65CF0" stroke-opacity="1.000000" stroke-width="2.000000" stroke-linejoin="round" stroke-linecap="round"/>
              </svg>
      section.catalog__inner
        h1.title-catalog Каталог 
        ul.catalog__list
          each card in cards  
            li.catalog__item(id= card.id)
              article.catalog-card
                span.catalog-card__rating= card.rating
                img.catalog-card__img(src="img/content/catalog-" + card.id + ".png", alt= card.name, loading="lazy")
                p.catalog-card__name= card.name
                p.price.catalog-card__price= card.price
                button.btn-secondary.catalog-card__btn Купить
        ul.catalog__pagination.pagination__list 
          li.pagination__item 
            button.btn-secondary.pagination__btn.active 1
          li.pagination__item 
            button.btn-secondary.pagination__btn 2
          li.pagination__item 
            button.btn-secondary.pagination__btn 3     
    {id: 2, name: 'Диван апартековый “T-75”', price: '69 990 руб', rating: '4,9'},
    {id: 3, name: 'Диван тканевый “D-31”', price: '28 490 руб', rating: '4,8'},
    {id: 4, name: 'Диван велюровый “Y-68”', price: '28 490 руб', rating: '4,8'},
    {id: 5, name: 'Диван из шинила “W-95”', price: '22 990 руб', rating: '4,8'},
    {id: 6, name: 'Диван флоковый “G-41”', price: '17 990 руб', rating: '4,8'},
    {id: 7, name: 'Диван шиниловый “V-43”', price: '19 990 руб', rating: '4,8'},

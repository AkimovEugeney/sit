-
  const array = {'Гарантия' : '18 месяцев', 'Артикул' : 'AAA41269004', 'Длина' : '163 см', 'Высота' : '90 см', 'Глубина' : '108 см', 'Спальное место' : '200 см х 125 см', 'Высота посадки' : '45 см', 'Механизм' : 'Опорный', 'Тип обивки' : 'Рогожка', 'Цвет' : 'Синий', 'Наполнитель' : 'Независимый пружинный блок', 'Материал каркаса' : 'Металл. рама с дерев. латами', 'Количество мест' : 'Двухместные', 'Категория' : 'Прямые тканевые диваны', 'Возврат' : 'Условия',}

section.section.card 
  .container
    .card__top  
      +picture('product-main.png','Диван тканевый прямой “D-31”', [560])
      .card__inner 
         span.catalog-card__rating.card__rating 4,8
         h1.card__title Диван тканевый прямой “D-31”
         p.card__inner-descr Мини 120 см без ящика Stark синий (Рогожка)
         p.card__price 28 490 руб
         .card__btns
          button.btn-primary.card__btn-buy Купить в один клик
          button.add-basket Добавить в корзину
    .card-descr__block 
      .card-descr__wrapp 
        h3.card-descr__title Опорный механизм
        p.card-descr__text Опорный механизм напоминает пантограф, к которому добавили дополнительную секцию. У опорного дивана сиденье «выпрыгивает» вперёд и вытаскивает вторую часть спального места. Заключительный штрих — опустить спинку.
        p.card-descr__text Этот механизм не портит пол и не боится ковров. Требуется чуть больше силы, чтобы разложить диван, но подросток справится.
        .card-descr__images 
          img.card-descr__img(src="img/content/product-bg-1.png", alt="Опорный механизм")
          img.card-descr__img(src="img/content/product-bg-2.png", alt="Опорный механизм")
      .card-descr__characteristic 
        dl.chars 
          each val,key in array
            .chars__item 
              dt.chars__term= key
              dd.chars__val= val


